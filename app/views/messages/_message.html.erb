<div class="comment">
  <div class="content">
    <a class="author">
      <% if current_user.name == User.find(message.user_id).name  %>
        Me
      <% else %>
        <%= User.find(message.user_id).name %>
      <% end %>
    </a>
    <div class="metadata">
      <span class="date"><%= time_ago_in_words(message.created_at) %></span>
    </div>
    <div class="text">
      <%= message.body %>
    </div>
  </div>
</div>


